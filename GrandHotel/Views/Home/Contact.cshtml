@model GrandHotel.Models.ContactVM
<h3>@ViewData["Message"]</h3>
@{
    ViewData["Title"] = "Contact";
}


<h2>@ViewData["Title"]</h2>
<div id="FormContact">
    <div id="contact-form row">
        <form asp-controller="Home" asp-action="Contact" asp-anti-forgery="true" method="post" id="contact">
            <div class="form-group">
                <div class="col-md-12 form-group">
                    <label asp-for="Nom" class="control-label"></label>

                    <input asp-for="Nom" class="form-control" placeholder="Nom" />
                    <span asp-validation-for="Nom" class="text-danger"></span>
                </div>
                <div class="col-md-12 form-group">
                    <label asp-for="Email" class="control-label"></label>
                    <input asp-for="Email" class="form-control" placeholder="Email" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
                <div class="col-md-12 form-group">
                    <label asp-for="Objet" class="control-label"></label>
                    <input asp-for="Objet" class="form-control" placeholder="Objet" />
                    <span asp-validation-for="Objet" class="text-danger"></span>
                </div>
                <div class="col-md-12 form-group">
                    <label asp-for="Message" class="control-label"></label>
                    <textarea asp-for="Message" class="message form-control" placeholder="Votre message..."></textarea>
                </div>
                <div class="col-md-6">

                    <button class="btn btn-primary has-spinner" id="three" type="submit">Envoyer  <span class="glyphicon glyphicon-send"></span></button>
                    @*<button class="btn btn-primary" type="submit" id="submit">Envoyer</button>*@
                </div>
            </div>
        </form>
    </div>
</div>
<div class="col-sm-3">
    <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d2626.4398587060514!2d2.336684780367258!3d48.83074807938623!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x47e671bc30030a63%3A0x690f549408eb3a9f!2s5+Villa+de+Lourcine%2C+75014+Paris!5e0!3m2!1sfr!2sfr!4v1519054026281" width="450" height="450" frameborder="0" style="border:0" allowfullscreen></iframe>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

